<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        .glass {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-sky-500 via-teal-500 to-emerald-500 p-5">

    <div class="glass w-[900px] rounded-3xl shadow-2xl flex overflow-hidden border border-white/20">

        <!-- Left Section -->
        <div class="w-1/2 bg-gradient-to-br from-sky-600/80 to-teal-700/80 text-white flex flex-col justify-center items-center p-12 relative">
            <h2 class="text-4xl font-extrabold mb-4 drop-shadow">Welcome Back</h2>
            <p class="text-white/85 text-center text-lg leading-relaxed">
                Sign in to access your account dashboard and services.
            </p>

            <div class="absolute inset-0 opacity-15">
                <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0,120 Q150,200 300,120 T600,120" stroke="white" fill="none" stroke-width="3" />
                    <path d="M0,220 Q150,300 300,220 T600,220" stroke="white" fill="none" stroke-width="3" />
                </svg>
            </div>
        </div>

        <!-- Right Section -->
        <div class="w-1/2 bg-white/90 backdrop-blur-sm flex flex-col justify-center px-12 py-14">
            <h2 class="text-3xl font-bold text-gray-800 mb-8">Sign In</h2>

            @if (TempData["Error"] != null)
            {
                <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    @TempData["Error"]
                </div>
            }

            <form method="POST" class="space-y-6" asp-action="Login_Page" asp-controller="Login">

                <!-- Email -->
                <div>
                    <input type="email" name="Email" placeholder="Email" required
                           class="w-full border border-gray-300 bg-white rounded-xl px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500">
                </div>

                <!-- Password -->
                <div>
                    <input type="password" name="Password" placeholder="Password" required
                           class="w-full border border-gray-300 bg-white rounded-xl px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500">
                </div>

                <!-- Remember + Forgot -->
                <div class="flex items-center justify-between text-sm text-gray-600">
                    <label class="flex items-center space-x-2">
                        <input type="checkbox" class="accent-sky-500">
                        <span>Remember me</span>
                    </label>

                    <a href="#" class="text-sky-600 hover:underline font-medium">Forgot password?</a>
                </div>

                <!-- Button -->
                <button type="submit"
                        class="w-full bg-gradient-to-r from-sky-500 to-teal-600 text-white py-3 rounded-xl font-semibold shadow-md hover:scale-[1.02] hover:shadow-lg transition-all duration-200">
                    Sign In
                </button>

                <!-- Link -->
                <p class="text-center text-gray-600 text-sm mt-4">
                    New here?
                    <a href="@Url.Action("SignupPage", "Signup")" class="text-sky-600 hover:underline font-medium">
                        Create an Account
                    </a>
                </p>

            </form>
        </div>
    </div>

</body>
</html>