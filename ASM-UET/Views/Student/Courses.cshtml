@model List<StudentCourseDto>
@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">My Courses</h1>
                <p class="text-gray-600 mt-1">View your enrolled courses and attendance details</p>
            </div>
            <div class="mt-4 lg:mt-0">
                <div class="flex items-center space-x-4">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">@Model.Count</div>
                        <div class="text-sm text-gray-500">Enrolled Courses</div>
                    </div>
                    @if (ViewBag.OverallAttendance != null)
                    {
                        <div class="w-px h-12 bg-gray-200"></div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-green-600">@ViewBag.OverallAttendance%</div>
                            <div class="text-sm text-gray-500">Overall Attendance</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            @foreach (var course in Model)
            {
                var progressColor = course.AttendancePercentage >= 75 ? "text-green-500" : 
                                   course.AttendancePercentage >= 65 ? "text-yellow-500" : 
                                   course.AttendancePercentage >= 50 ? "text-orange-500" : "text-red-500";
                
                var progressStroke = course.AttendancePercentage >= 75 ? "stroke-green-500" : 
                                    course.AttendancePercentage >= 65 ? "stroke-yellow-500" : 
                                    course.AttendancePercentage >= 50 ? "stroke-orange-500" : "stroke-red-500";
                
                var progressBg = course.AttendancePercentage >= 75 ? "bg-green-50" : 
                                course.AttendancePercentage >= 65 ? "bg-yellow-50" : 
                                course.AttendancePercentage >= 50 ? "bg-orange-50" : "bg-red-50";
                
                var circumference = 2 * Math.PI * 30; // radius = 30
                var strokeDasharray = circumference;
                var strokeDashoffset = circumference - (circumference * (double)course.AttendancePercentage / 100);

                <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="p-6">
                        <!-- Course Header -->
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3 class="text-xl font-semibold text-gray-900">@course.CourseCode</h3>
                                <p class="text-gray-600 font-medium">@course.CourseName</p>
                                <p class="text-sm text-gray-500 mt-1">@course.TeacherName</p>
                            </div>
                            <div class="text-right">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    @(course.AttendanceStatus == "Good" ? "bg-green-100 text-green-800" : 
                                      course.AttendanceStatus == "Warning" ? "bg-yellow-100 text-yellow-800" :
                                      course.AttendanceStatus == "Poor" ? "bg-orange-100 text-orange-800" : "bg-red-100 text-red-800")">
                                    @course.AttendanceStatus
                                </span>
                            </div>
                        </div>

                        <!-- Progress Circle -->
                        <div class="flex items-center justify-center mb-6">
                            <div class="relative">
                                <svg class="w-20 h-20 transform -rotate-90" viewBox="0 0 70 70">
                                    <!-- Background circle -->
                                    <circle cx="35" cy="35" r="30" stroke="currentColor" stroke-width="4" fill="none" class="text-gray-200"></circle>
                                    <!-- Progress circle -->
                                    <circle cx="35" cy="35" r="30" 
                                            stroke="currentColor" 
                                            stroke-width="4" 
                                            fill="none" 
                                            class="@progressStroke transition-all duration-1000 ease-out"
                                            stroke-linecap="round"
                                            stroke-dasharray="@strokeDasharray"
                                            stroke-dashoffset="@strokeDashoffset">
                                    </circle>
                                </svg>
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <span class="text-lg font-bold @progressColor">@course.AttendancePercentage%</span>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics -->
                        <div class="grid grid-cols-3 gap-4 mb-4">
                            <div class="text-center">
                                <div class="text-lg font-semibold text-green-600">@course.PresentCount</div>
                                <div class="text-xs text-gray-500">Present</div>
                            </div>
                            <div class="text-center">
                                <div class="text-lg font-semibold text-yellow-600">@course.LateCount</div>
                                <div class="text-xs text-gray-500">Late</div>
                            </div>
                            <div class="text-center">
                                <div class="text-lg font-semibold text-red-600">@course.AbsentCount</div>
                                <div class="text-xs text-gray-500">Absent</div>
                            </div>
                        </div>

                        <!-- Course Info -->
                        <div class="pt-4 border-t border-gray-100">
                            <div class="flex items-center justify-between text-sm text-gray-600">
                                <span>Total Classes</span>
                                <span class="font-medium">@course.TotalClasses</span>
                            </div>
                            <div class="flex items-center justify-between text-sm text-gray-600 mt-1">
                                <span>Enrolled Since</span>
                                <span class="font-medium">@course.EnrollmentDate.ToString("MMM yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="bg-white rounded-xl shadow-sm p-12 text-center">
            <i class="fas fa-book-open text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No Courses Enrolled</h3>
            <p class="text-gray-600 mb-6">You haven't enrolled in any courses yet. Start your learning journey today!</p>
            <a href="@Url.Action("Register", "Student")" 
               class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                <i class="fas fa-plus mr-2"></i>
                Enroll in a Course
            </a>
        </div>
    }

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="@Url.Action("Register", "Student")" 
           class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow group">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                        <i class="fas fa-plus-square text-blue-600 text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-blue-600 transition-colors">Enroll in More Courses</h3>
                    <p class="text-gray-600 text-sm">Browse and register for available courses</p>
                </div>
            </div>
        </a>

        <a href="@Url.Action("AttendanceHistory", "Student")" 
           class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow group">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                        <i class="fas fa-history text-purple-600 text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-purple-600 transition-colors">View Attendance History</h3>
                    <p class="text-gray-600 text-sm">See detailed attendance records</p>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress circles
            const progressCircles = document.querySelectorAll('circle[stroke-dasharray]');
            progressCircles.forEach((circle, index) => {
                setTimeout(() => {
                    circle.style.strokeDashoffset = circle.getAttribute('stroke-dashoffset');
                }, index * 200);
            });

            console.log('Student Courses page loaded successfully');
        });
    </script>
}