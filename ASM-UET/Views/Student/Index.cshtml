@model StudentDashboardDto
@{
    ViewData["Title"] = "My Progress";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Welcome back, @Model.StudentName!</h1>
                <p class="text-gray-600 mt-1">Here's your academic progress overview</p>
            </div>
            <div class="mt-4 lg:mt-0">
                <div class="flex items-center space-x-4">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">@Model.TotalEnrollments</div>
                        <div class="text-sm text-gray-500">Enrolled Courses</div>
                    </div>
                    <div class="w-px h-12 bg-gray-200"></div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600">@Model.OverallAttendancePercentage%</div>
                        <div class="text-sm text-gray-500">Overall Attendance</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Progress Circles -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Course Attendance Progress</h2>
            <a href="@Url.Action("Courses", "Student")" class="text-blue-600 hover:text-blue-700 text-sm font-medium flex items-center">
                View All Courses
                <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        @if (Model.RecentCourses.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var course in Model.RecentCourses)
                {
                    var progressColor = course.AttendancePercentage >= 75 ? "text-green-500" : 
                                       course.AttendancePercentage >= 65 ? "text-yellow-500" : 
                                       course.AttendancePercentage >= 50 ? "text-orange-500" : "text-red-500";
                    
                    var progressStroke = course.AttendancePercentage >= 75 ? "stroke-green-500" : 
                                        course.AttendancePercentage >= 65 ? "stroke-yellow-500" : 
                                        course.AttendancePercentage >= 50 ? "stroke-orange-500" : "stroke-red-500";
                    
                    var progressBg = course.AttendancePercentage >= 75 ? "bg-green-50" : 
                                    course.AttendancePercentage >= 65 ? "bg-yellow-50" : 
                                    course.AttendancePercentage >= 50 ? "bg-orange-50" : "bg-red-50";
                    
                    var circumference = 2 * Math.PI * 35; // radius = 35
                    var strokeDasharray = circumference;
                    var strokeDashoffset = circumference - (circumference * (double)course.AttendancePercentage / 100);
                    
                    <div class="@progressBg rounded-lg p-6 text-center transition-all hover:shadow-md">
                        <div class="relative inline-flex items-center justify-center mb-4">
                            <!-- Progress Circle SVG -->
                            <svg class="w-24 h-24 transform -rotate-90" viewBox="0 0 80 80">
                                <!-- Background circle -->
                                <circle cx="40" cy="40" r="35" stroke="currentColor" stroke-width="6" fill="none" class="text-gray-200"></circle>
                                <!-- Progress circle -->
                                <circle cx="40" cy="40" r="35" 
                                        stroke="currentColor" 
                                        stroke-width="6" 
                                        fill="none" 
                                        class="@progressStroke transition-all duration-1000 ease-out"
                                        stroke-linecap="round"
                                        stroke-dasharray="@strokeDasharray"
                                        stroke-dashoffset="@strokeDashoffset"
                                        style="transition-delay: 0.2s">
                                </circle>
                            </svg>
                            <!-- Percentage Text -->
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span class="text-xl font-bold @progressColor">@course.AttendancePercentage%</span>
                            </div>
                        </div>
                        
                        <h3 class="font-semibold text-gray-900 mb-1">@course.CourseCode</h3>
                        <p class="text-sm text-gray-600 mb-2">@course.CourseName</p>
                        <p class="text-xs text-gray-500 mb-3">@course.TeacherName</p>
                        
                        <div class="flex justify-between text-xs text-gray-600 bg-white rounded-lg p-2">
                            <div class="text-center">
                                <div class="font-medium text-green-600">@course.PresentCount</div>
                                <div>Present</div>
                            </div>
                            <div class="text-center">
                                <div class="font-medium text-yellow-600">@course.LateCount</div>
                                <div>Late</div>
                            </div>
                            <div class="text-center">
                                <div class="font-medium text-red-600">@course.AbsentCount</div>
                                <div>Absent</div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                @(course.AttendanceStatus == "Good" ? "bg-green-100 text-green-800" : 
                                  course.AttendanceStatus == "Warning" ? "bg-yellow-100 text-yellow-800" :
                                  course.AttendanceStatus == "Poor" ? "bg-orange-100 text-orange-800" : "bg-red-100 text-red-800")">
                                @course.AttendanceStatus
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-book-open text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No Courses Enrolled</h3>
                <p class="text-gray-600 mb-4">You haven't enrolled in any courses yet.</p>
                <a href="@Url.Action("Register", "Student")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Enroll in a Course
                </a>
            </div>
        }
    </div>

    <!-- Recent Attendance Timeline -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Recent Attendance</h2>
            <a href="@Url.Action("AttendanceHistory", "Student")" class="text-blue-600 hover:text-blue-700 text-sm font-medium flex items-center">
                View Full History
                <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        @if (Model.RecentAttendance.Any())
        {
            <div class="flow-root">
                <ul class="-mb-8">
                    @for (int i = 0; i < Model.RecentAttendance.Count; i++)
                    {
                        var attendance = Model.RecentAttendance[i];
                        var isLast = i == Model.RecentAttendance.Count - 1;
                        var statusColor = attendance.Status == "Present" ? "bg-green-500 text-green-500" : 
                                         attendance.Status == "Late" ? "bg-yellow-500 text-yellow-500" : "bg-red-500 text-red-500";
                        var statusIcon = attendance.Status == "Present" ? "fas fa-check" : 
                                        attendance.Status == "Late" ? "fas fa-clock" : "fas fa-times";
                        
                        <li>
                            <div class="relative pb-8">
                                @if (!isLast)
                                {
                                    <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                                }
                                <div class="relative flex items-start space-x-3">
                                    <!-- Status Icon -->
                                    <div class="relative">
                                        <div class="h-10 w-10 rounded-full @statusColor.Split(' ')[0] flex items-center justify-center ring-8 ring-white">
                                            <i class="@statusIcon text-white text-sm"></i>
                                        </div>
                                    </div>
                                    
                                    <!-- Content -->
                                    <div class="min-w-0 flex-1">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">
                                                    @attendance.CourseCode - @attendance.CourseName
                                                </p>
                                                <p class="text-sm text-gray-600 mt-0.5">
                                                    Marked <span class="font-medium @statusColor.Split(' ')[1]">@attendance.Status</span>
                                                </p>
                                            </div>
                                            <div class="text-right whitespace-nowrap text-sm text-gray-500">
                                                <time datetime="@attendance.Date.ToString("yyyy-MM-dd")">
                                                    @attendance.Date.ToString("MMM dd, yyyy")
                                                </time>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-calendar-check text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No Attendance Records</h3>
                <p class="text-gray-600">Your attendance records will appear here once classes begin.</p>
            </div>
        }
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="@Url.Action("Courses", "Student")" class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow group">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                        <i class="fas fa-book-open text-blue-600 text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-blue-600 transition-colors">My Courses</h3>
                    <p class="text-gray-600 text-sm">View enrolled courses and details</p>
                </div>
            </div>
        </a>

        <a href="@Url.Action("Register", "Student")" class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow group">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                        <i class="fas fa-plus-square text-green-600 text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-green-600 transition-colors">Enroll in Course</h3>
                    <p class="text-gray-600 text-sm">Register for available courses</p>
                </div>
            </div>
        </a>

        <a href="@Url.Action("AttendanceHistory", "Student")" class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow group">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                        <i class="fas fa-history text-purple-600 text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-purple-600 transition-colors">Attendance History</h3>
                    <p class="text-gray-600 text-sm">View detailed attendance records</p>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress circles on page load
            const progressCircles = document.querySelectorAll('circle[stroke-dasharray]');
            progressCircles.forEach((circle, index) => {
                setTimeout(() => {
                    circle.style.strokeDashoffset = circle.getAttribute('stroke-dashoffset');
                }, index * 200);
            });

            // Add entrance animation to timeline items
            const timelineItems = document.querySelectorAll('li');
            timelineItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    item.style.transition = 'opacity 0.5s ease-out, transform 0.5s ease-out';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 500 + (index * 100));
            });

            // Add hover effects to quick action cards
            const actionCards = document.querySelectorAll('a[href*="Student"]');
            actionCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            console.log('Student Dashboard loaded successfully');
        });

        // Function to update progress circles with animation
        function updateProgressCircle(element, percentage) {
            const circumference = 2 * Math.PI * 35;
            const offset = circumference - (circumference * percentage / 100);
            element.style.strokeDashoffset = offset;
        }

        // Function to format dates in timeline
        function formatDate(dateString) {
            const date = new Date(dateString);
            const today = new Date();
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            
            if (date.toDateString() === today.toDateString()) {
                return 'Today';
            } else if (date.toDateString() === yesterday.toDateString()) {
                return 'Yesterday';
            } else {
                return date.toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric' 
                });
            }
        }
    </script>
}

@section Styles {
    <style>
        /* Custom animations for progress circles */
        @@keyframes progress-circle {
            from {
                stroke-dashoffset: 219.8; /* Full circle */
            }
            to {
                stroke-dashoffset: var(--target-offset);
            }
        }

        .progress-circle {
            animation: progress-circle 1.5s ease-out forwards;
        }

        /* Smooth transitions for hover effects */
        .transition-all {
            transition-property: all;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
            transition-duration: 300ms;
        }

        /* Custom scrollbar for better aesthetics */
        .overflow-y-auto::-webkit-scrollbar {
            width: 6px;
        }

        .overflow-y-auto::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .overflow-y-auto::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        .overflow-y-auto::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
}