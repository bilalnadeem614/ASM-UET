@model ASM_UET.Models.DashboardStatsDto
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <!-- Welcome Section -->
    <div class="mb-8">
        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl p-8 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold mb-2">Welcome back, Admin! ??</h1>
                    <p class="text-indigo-100 text-lg">
                        Here's an overview of your system today.
                    </p>
                </div>
                <div class="hidden md:block">
                    <div class="w-24 h-24 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-shield text-4xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Courses Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-book text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalCourses</p>
                        <p class="text-sm text-gray-500">Total Courses</p>
                    </div>
                </div>
            </div>

            <!-- Total Teachers Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-chalkboard-teacher text-emerald-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalTeachers</p>
                        <p class="text-sm text-gray-500">Total Teachers</p>
                    </div>
                </div>
            </div>

            <!-- Total Students Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-user-graduate text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalStudents</p>
                        <p class="text-sm text-gray-500">Total Students</p>
                    </div>
                </div>
            </div>

            <!-- Recent Enrollments Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-clipboard-list text-orange-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-gray-900">@(Model.RecentEnrollments?.Count ?? 0)</p>
                        <p class="text-sm text-gray-500">Recent Enrollments</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-history text-indigo-600 mr-3"></i>
                    Recent Activity
                </h2>
            </div>
            
            <div class="p-6">
                @if (Model.RecentEnrollments != null && Model.RecentEnrollments.Any())
                {
                    <div class="space-y-4">
                        @foreach (var enrollment in Model.RecentEnrollments.Take(5))
                        {
                            <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mr-4">
                                        <i class="fas fa-user-graduate text-white"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">@enrollment.StudentName</p>
                                        <p class="text-sm text-gray-500">
                                            Enrolled in <span class="font-medium text-indigo-600">@enrollment.CourseName</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm text-gray-500">@enrollment.EnrollmentDate.ToString("MMM dd, yyyy")</p>
                                    <p class="text-xs text-gray-400">@enrollment.EnrollmentDate.ToString("hh:mm tt")</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-inbox text-2xl text-gray-400"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Recent Activity</h3>
                        <p class="text-gray-500">No recent enrollments found in the system.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions Section -->
        <div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                <i class="fas fa-bolt text-yellow-500 mr-3"></i>
                Quick Actions
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <a href="@Url.Action("Courses", "Admin")" 
                   class="flex items-center justify-center p-4 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors border border-blue-200">
                    <i class="fas fa-plus-circle text-blue-600 text-xl mr-3"></i>
                    <span class="font-medium text-blue-700">Add Course</span>
                </a>
                
                <a href="@Url.Action("Users", "Admin")" 
                   class="flex items-center justify-center p-4 bg-emerald-50 hover:bg-emerald-100 rounded-lg transition-colors border border-emerald-200">
                    <i class="fas fa-user-plus text-emerald-600 text-xl mr-3"></i>
                    <span class="font-medium text-emerald-700">Add User</span>
                </a>
                
                <a href="@Url.Action("Reports", "Admin")" 
                   class="flex items-center justify-center p-4 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors border border-purple-200">
                    <i class="fas fa-chart-bar text-purple-600 text-xl mr-3"></i>
                    <span class="font-medium text-purple-700">View Reports</span>
                </a>
                
                <button onclick="window.location.reload()" 
                        class="flex items-center justify-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors border border-gray-200">
                    <i class="fas fa-sync-alt text-gray-600 text-xl mr-3"></i>
                    <span class="font-medium text-gray-700">Refresh Data</span>
                </button>
            </div>
        </div>
    }
    else
    {
        <!-- Loading State -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
            <i class="fas fa-spinner fa-spin text-4xl text-indigo-600 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Loading Dashboard</h3>
            <p class="text-gray-500">Please wait while we fetch the system statistics...</p>
        </div>
    }
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Admin Dashboard loaded');
        
        // You can add any dashboard-specific JavaScript here
        @if (Model == null)
        {
            <text>showNotification('Unable to load dashboard statistics. Please refresh the page.', 'warning');</text>
        }
    });
</script>
}
