@model ASM_UET.Models.TeacherStatsDto
@{
    ViewData["Title"] = "Attendance Reports";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    var teacherId = ViewData["TeacherId"] as int? ?? 0;
}

<div class="max-w-7xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Attendance Reports & Analytics</h1>
                <p class="text-gray-600">Comprehensive attendance overview across all your courses</p>
            </div>
            <div class="mt-4 md:mt-0 flex space-x-3">
                <a href="@Url.Action("Index", "Teacher")" 
                   class="inline-flex items-center px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-all">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Dashboard
                </a>
                <button onclick="exportReport()" 
                        class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-all">
                    <i class="fas fa-download mr-2"></i>
                    Export Report
                </button>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- Summary Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Courses</p>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalCourses</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-book text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Students</p>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalStudents</p>
                    </div>
                    <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-users text-emerald-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Classes</p>
                        <p class="text-3xl font-bold text-gray-900">@Model.TotalClasses</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-chalkboard text-purple-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Average Attendance</p>
                        <p class="text-3xl font-bold text-gray-900">@Model.OverallAttendanceRate%</p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-chart-line text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course-wise Attendance Overview -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
            <div class="px-6 py-4 bg-gradient-to-r from-emerald-500 to-teal-600 text-white rounded-t-xl">
                <h2 class="text-xl font-bold flex items-center">
                    <i class="fas fa-chart-bar mr-3"></i>
                    Course-wise Attendance Overview
                </h2>
            </div>
            <div class="p-6">
                @if (Model.CourseStats != null && Model.CourseStats.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Students</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Classes</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Attendance Rate</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var course in Model.CourseStats)
                                {
                                    var attendanceStatus = course.AverageAttendanceRate >= 80 ? "Excellent" : 
                                                          course.AverageAttendanceRate >= 70 ? "Good" : 
                                                          course.AverageAttendanceRate >= 60 ? "Fair" : "Needs Attention";
                                    var statusColor = course.AverageAttendanceRate >= 80 ? "bg-green-100 text-green-800" : 
                                                     course.AverageAttendanceRate >= 70 ? "bg-blue-100 text-blue-800" : 
                                                     course.AverageAttendanceRate >= 60 ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800";

                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">@course.CourseName</div>
                                                <div class="text-sm text-gray-500">@course.CourseCode</div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <i class="fas fa-users text-gray-400 mr-2"></i>
                                                <span class="text-sm text-gray-900">@course.EnrollmentCount</span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <i class="fas fa-chalkboard text-gray-400 mr-2"></i>
                                                <span class="text-sm text-gray-900">@course.TotalClasses</span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-1 bg-gray-200 rounded-full h-2 mr-3">
                                                    <div class="bg-emerald-600 h-2 rounded-full" style="width: @course.AverageAttendanceRate%"></div>
                                                </div>
                                                <span class="text-sm font-medium text-gray-900">@course.AverageAttendanceRate%</span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusColor">
                                                @attendanceStatus
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <div class="flex space-x-2">
                                                <a href="@Url.Action("AttendanceHistory", "Teacher", new { courseId = course.CourseId })" 
                                                   class="text-emerald-600 hover:text-emerald-900">
                                                    <i class="fas fa-history mr-1"></i>
                                                    History
                                                </a>
                                                <a href="@Url.Action("CourseStudents", "Teacher", new { courseId = course.CourseId })" 
                                                   class="text-blue-600 hover:text-blue-900">
                                                    <i class="fas fa-users mr-1"></i>
                                                    Students
                                                </a>
                                                <a href="@Url.Action("MarkAttendance", "Teacher", new { courseId = course.CourseId })" 
                                                   class="text-purple-600 hover:text-purple-900">
                                                    <i class="fas fa-clipboard-check mr-1"></i>
                                                    Mark
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-chart-bar text-6xl text-gray-300 mb-4"></i>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No Course Data Available</h3>
                        <p class="text-gray-500">No courses have been assigned to you yet.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Students Requiring Attention -->
        @if (Model.TopAbsentStudents != null && Model.TopAbsentStudents.Any())
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
                <div class="px-6 py-4 bg-gradient-to-r from-red-500 to-orange-500 text-white rounded-t-xl">
                    <h2 class="text-xl font-bold flex items-center">
                        <i class="fas fa-exclamation-triangle mr-3"></i>
                        Students Requiring Attention (Below 75% Attendance)
                    </h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach (var student in Model.TopAbsentStudents)
                        {
                            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-center justify-between mb-3">
                                    <h4 class="font-semibold text-gray-900">@student.StudentName</h4>
                                    <span class="text-xs px-2 py-1 rounded-full @(student.AttendancePercentage < 50 ? "bg-red-100 text-red-800" : student.AttendancePercentage < 65 ? "bg-orange-100 text-orange-800" : "bg-yellow-100 text-yellow-800")">
                                        @student.AttendanceStatus
                                    </span>
                                </div>
                                <div class="text-sm text-gray-600 mb-3">
                                    <p><strong>Course:</strong> @student.CourseCode - @student.CourseName</p>
                                    <p><strong>Email:</strong> @student.Email</p>
                                    <p><strong>Attendance:</strong> @student.PresentCount/@student.TotalClasses (@student.AttendancePercentage%)</p>
                                </div>
                                <div class="flex space-x-2">
                                    <a href="mailto:@student.Email" 
                                       class="flex-1 text-center px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors text-sm">
                                        <i class="fas fa-envelope mr-1"></i>
                                        Email
                                    </a>
                                    <a href="@Url.Action("CourseStudents", "Teacher", new { courseId = Model.CourseStats.FirstOrDefault(c => c.CourseCode == student.CourseCode)?.CourseId })" 
                                       class="flex-1 text-center px-3 py-2 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-colors text-sm">
                                        <i class="fas fa-eye mr-1"></i>
                                        View
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Recent Activity -->
        @if (Model.RecentAttendance != null && Model.RecentAttendance.Any())
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                <div class="px-6 py-4 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-t-xl">
                    <h2 class="text-xl font-bold flex items-center">
                        <i class="fas fa-clock mr-3"></i>
                        Recent Attendance Activity
                    </h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        @foreach (var activity in Model.RecentAttendance.Take(10))
                        {
                            <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-emerald-100 rounded-full flex items-center justify-center mr-4">
                                        <i class="fas fa-clipboard-check text-emerald-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">@activity.CourseName</p>
                                        <p class="text-sm text-gray-500">@activity.CourseCode • @activity.Date.ToString("MMM dd, yyyy")</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="flex space-x-4 text-sm">
                                        <span class="text-green-600">
                                            <i class="fas fa-check mr-1"></i>
                                            @activity.PresentCount Present
                                        </span>
                                        <span class="text-red-600">
                                            <i class="fas fa-times mr-1"></i>
                                            @activity.AbsentCount Absent
                                        </span>
                                        @if (activity.LateCount > 0)
                                        {
                                            <span class="text-yellow-600">
                                                <i class="fas fa-clock mr-1"></i>
                                                @activity.LateCount Late
                                            </span>
                                        }
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">@activity.TotalStudents total students</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Loading State -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
            <i class="fas fa-spinner fa-spin text-4xl text-emerald-600 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Loading Reports</h3>
            <p class="text-gray-500">Please wait while we gather your attendance data...</p>
        </div>
    }
</div>

